<?xml version='1.0' encoding='utf-8'?>
<widget id="uvimex.com" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Uvimex</name>
    <description>
       App de cursos Uvimex
    </description>
    <author email="m.rivas@denlin.com.mx" href="https://uvimex.com.mx">
        Uvimex
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <access origin='*' allows-arbitrary-loads-for-media='true' allows-arbitrary-loads-in-web-content='true' allows-local-networking='true' />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="icons/android/mipmap-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="icons/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="icons/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="icons/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="icons/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="icons/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="icons/ios/icon-App-60x60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="icons/ios/icon-App-60x60@1x.png" width="60" height="60" />
        <icon src="icons/ios/icon-App-60x60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="icons/ios/icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="icons/ios/icon-App-76x76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="icons/ios/icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="icons/ios/icon-App-40x40@2x.png" width="80" height="80" />
        <!-- iPad -->
        <!-- iPad Pro -->
        <icon src="icons/ios/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="icons/ios/icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="icons/ios/icon-App-29x29@2x.png" width="58" height="58" />
        <icon src="icons/ios/icon-App-29x29@3x.png" width="87" height="87" />
    </platform>
</widget>
