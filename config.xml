<?xml version='1.0' encoding='utf-8'?>
<widget id="com.uvimex.cursos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Uvimex</name>
    <description>
        Aplicacion para consumo de cursos de plataforma Uvimex
    </description>
    <author email="m.rivas@denlin.com.mx" href="https://uvimex.com.mx">
        UVIMEX
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="icons/logo_36.png" density="ldpi" />
        <icon src="icons/logo_48.png" density="mdpi" />
        <icon src="icons/logo_72.png" density="hdpi" />
        <icon src="icons/logo_96.png" density="xhdpi" />
        <icon src="icons/logo_144.png" density="xxhdpi" />
        <icon src="icons/logo_192.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
